// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(uuid())
  name String
  email String @unique
  isEmployee Boolean
  createdAt DateTime @default(now())
  orders Order[]
}

model Order {
  id String @id @default(uuid())
  totalPrice Decimal
  orderDate DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  userId String

  orderItems OrderItems[]
}

model OrderItems {
  id String @id @default(uuid())

  itemAmount Int

  snacks Snacks[]

  ingredients Ingredients[]

  order Order @relation(fields: [orderId], references: [id])
  orderId String
}

model Ingredients {
  id String @id @default(uuid())
  name String @unique
  unitMoneyAmount Decimal
  availableAmount Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orderItems OrderItems[]

  snackItems SnackItems[]

  menuItems MenuItems[]
}

model Snacks {
  id String @id @default(uuid())
  name String @unique
  description String
  unitMoneyAmount Decimal
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orderItems OrderItems[]

  menuItems MenuItems[]

  snackItems SnackItems[]
}

model SnackItems {
  id String @id @default(uuid())
  ingredientAmount Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  snack Snacks @relation(fields: [snackId], references: [id])
  snackId String

  ingredient Ingredients @relation(fields: [ingredientId], references: [id])
  ingredientId String
}

model Menus {
  id String @id @default(uuid())
  name String @unique
  description String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  menuItems MenuItems[]
}

model MenuItems {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  menu Menus @relation(fields: [menuId], references: [id])
  menuId String

  snacks Snacks[]

  ingredients Ingredients[]
}
